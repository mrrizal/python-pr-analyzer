import re

with open("diff_sample.txt", 'r') as f:
    chunks = []
    temp = []
    current_symbol = None
    for i in f.readlines():
        try:
            symbol = re.search(r'^[+-]+', i).group()
        except AttributeError:
            current_symbol = None
            if len(temp) > 0:
                chunks.append(temp)
                temp = []
            continue

        if symbol:
            if not current_symbol:
                temp.append(i)
                current_symbol = symbol
            else:
                if symbol == current_symbol:
                    temp.append(i)
                else:
                    chunks.append(temp)
                    temp = [i]
                    current_symbol = symbol

    if len(temp) > 0:
        chunks.append(temp)

    from pprint import pprint
    for hunk in chunks:
        pprint(hunk)
        print("=======")